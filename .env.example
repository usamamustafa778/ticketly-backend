PORT=5001
# Backend base URL for image URLs (optional - defaults to request host or localhost)
# Production: https://your-backend.onrender.com
BASE_URL=http://localhost:5001
MONGO_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/?appName=<appName>
JWT_SECRET=your_jwt_secret_key
FRONTEND_URL=http://localhost:8081/
EMAIL_PASS=your_email_app_password
EMAIL_USER=your_email@gmail.com

# Google OAuth (get from https://console.cloud.google.com/apis/credentials)
# Use real values only in .env â€” never commit them
GOOGLE_CLIENT_ID=<paste_client_id_here>
GOOGLE_CLIENT_SECRET=<paste_client_secret_here>

# Google OAuth Callback URL (optional - defaults to http://localhost:5001/api/auth/google/callback)
GOOGLE_CALLBACK_URL=http://localhost:5001/api/auth/google/callback